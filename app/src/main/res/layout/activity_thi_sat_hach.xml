<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThiSatHach">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        tools:layout_editor_absoluteY="20dp">

        <LinearLayout
            android:id="@+id/Layout_cauhoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="#3EE49D9D"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Layout_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Câu: "
                    android:textColor="#000"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/tv_stt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="1"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="270dp"
                    android:layout_weight="1"
                    android:text="Thời gian"

                    android:textColor="#000"

                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_cauhoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Nội dung câu hỏi?"
                android:textSize="13dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/anhCauHoi"
                android:layout_width="250dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="13dp"
                android:background="#608A6B6B"
                android:scaleType="fitCenter"
                tools:srcCompat="@drawable/bienbao" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout_dapan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000" />

            <CheckBox
                android:id="@+id/cb_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="4dp"
                android:buttonTint="@color/colorPrimary"
                android:text="A. 1"
                android:textColor="#000"
                android:textSize="13dp" />

            <View
                android:id="@+id/view_A"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="#000" />

            <CheckBox
                android:id="@+id/cb_B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="4dp"
                android:buttonTint="@color/colorPrimary"
                android:text="B. 2"
                android:textColor="#000"
                android:textSize="13dp" />

            <View
                android:id="@+id/view_B_"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginBottom="10dp"
                android:background="#000"
                android:visibility="gone" />

            <View
                android:id="@+id/view_B2"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="#000" />

            <CheckBox
                android:id="@+id/cb_C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="4dp"
                android:buttonTint="@color/colorPrimary"
                android:text="C. 3"
                android:textColor="#000"
                android:textSize="13dp" />

            <View
                android:id="@+id/view_C_"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginBottom="10dp"
                android:background="#000"
                android:visibility="gone" />

            <View
                android:id="@+id/view_D"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="#000" />

            <CheckBox
                android:id="@+id/cb_D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="4dp"
                android:buttonTint="@color/colorPrimary"
                android:text="D. 4"
                android:textColor="#000"
                android:textSize="13dp" />


            <View
                android:id="@+id/view_C2"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="#000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Lùi"

                />

            <Button
                android:id="@+id/btnKetThuc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Kết thúc"

                />

            <Button
                android:id="@+id/btnTiep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Tiếp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>